<div align="center"><%= image_tag "starfield.jpg", class: "background" %></div>
<section id='new-game-form' class="container form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for :game, url: new_game_path do |f| %>
        <fieldset>
          <h1 class="text-center">New Game</h1>

          <div class="form-group">
            <label class="col-md-4 control-label" for="title">Title</label>
            <div class="col-md-8">
              <%= f.text_field :title, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="backstory">Backstory</label>
            <div class="col-md-8">
              <%= f.text_area :backstory, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "New Story", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>

    </div>
  </div>